<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tech.mohitkumar.internappdesign">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:allowEmbedded="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.Secondary" />
        <activity android:name=".Activities.ProfileActivity" />
        <activity android:name=".Activities.FullScreenVideos" />
        <activity
            android:name=".Activities.CommentsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.TextReplies" />
        <activity
            android:name=".Activities.UploadActivity"
            android:label="Upload Video" />
        <activity android:name=".Activities.NotificationActivity" />
        <activity android:name=".Activities.GroupClickActivity" />
        <activity android:name=".Activities.DetailsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label=""></activity>
    </application>

</manifest>